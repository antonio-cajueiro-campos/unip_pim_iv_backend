FROM mcr.microsoft.com/dotnet/sdk:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY unip_pim_iv_backend.sln ./
COPY TSB.Portal.Backend.Api/*.csproj ./TSB.Portal.Backend.Api/
COPY TSB.Portal.Backend.Application/*.csproj ./TSB.Portal.Backend.Application/
COPY TSB.Portal.Backend.CrossCutting/*.csproj ./TSB.Portal.Backend.CrossCutting/
COPY TSB.Portal.Backend.Infra/*.csproj ./TSB.Portal.Backend.Infra/
COPY TSB.Portal.Backend.UnitTest/*.csproj ./TSB.Portal.Backend.UnitTest/

RUN dotnet restore
COPY . .

WORKDIR /src/TSB.Portal.Backend.Api
RUN dotnet build -c Release -o /app
WORKDIR /src/TSB.Portal.Backend.Application
RUN dotnet build -c Release -o /app 
WORKDIR /src/TSB.Portal.Backend.CrossCutting
RUN dotnet build -c Release -o /app
WORKDIR /src/TSB.Portal.Backend.Infra
RUN dotnet build -c Release -o /app
WORKDIR /src/TSB.Portal.Backend.UnitTest
RUN dotnet build -c Release -o /app

FROM build AS publish
RUN dotnet publish -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "TSB.Portal.Backend.Api.dll"]